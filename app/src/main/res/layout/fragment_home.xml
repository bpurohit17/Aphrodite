<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/txtEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="Emergency help\nneeded?"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEmergency"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="Tap to get help"
        android:textAlignment="center"
        android:textColor="@color/secondaryTextColor"
        android:textSize="18sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/textView3"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/sos_button_desc"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/ic_sos_button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:text="Not sure what to do?"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Pick the subject to chat"
        android:textAlignment="center"
        android:textColor="@color/tertiaryTextColor"
        android:textSize="12sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView5"
        android:weightSum="5"
        android:padding="16dp">

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/list1"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content" />-->

    </LinearLayout>

</RelativeLayout>